            <Button Background="Red" Foreground="white" Content="15" FontSize="20" Grid.Row="0" Grid.Column="14" Click="Button_Click_1"></Button>




            <Button Background="Black" Foreground="white" Content="16" FontSize="20" Grid.Row="1" Grid.Column="0" Click="Button_Click_1"></Button>
            <Button Background="Black" Foreground="white" Content="17" FontSize="20" Grid.Row="1" Grid.Column="1" Click="Button_Click_1"></Button>
            <Button Background="Black" Foreground="white" Content="18" FontSize="20" Grid.Row="1" Grid.Column="2" Click="Button_Click_1"></Button>
