            <Button Background="Black" Foreground="white" Content="9" FontSize="20" Grid.Row="0" Grid.Column="8" Click="Button_Click_1"></Button>
            <Button Background="Black" Foreground="white" Content="10" FontSize="20" Grid.Row="0" Grid.Column="9" Click="Button_Click_1"></Button>

            <Button Background="Red" Foreground="white" Content="11" FontSize="20" Grid.Row="0" Grid.Column="10" Click="Button_Click_1"></Button>
